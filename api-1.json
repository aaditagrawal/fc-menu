{
  "openapi": "3.0.3",
  "info": {
    "title": "FC2 Menu API",
    "version": "1.0.0",
    "description": "API for uploading and querying weekly and historical menu data for Food Court 2."
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths": {
    "/api/menu": {
      "get": {
        "summary": "Get menu data",
        "description": "Returns menu data. By default returns the latest available week. You can filter by exact week label, week start date, or a single date.",
        "parameters": [
          {
            "in": "query",
            "name": "week",
            "schema": {
              "type": "string"
            },
            "required": false,
            "description": "Exact week label match, e.g. 'August 25 - 31, 2025'"
          },
          {
            "in": "query",
            "name": "weekStart",
            "schema": {
              "type": "string",
              "format": "date"
            },
            "required": false,
            "description": "ISO date for first day of week, e.g. 2025-08-25"
          },
          {
            "in": "query",
            "name": "date",
            "schema": {
              "type": "string",
              "format": "date"
            },
            "required": false,
            "description": "ISO date for a single day to return only that day"
          }
        ],
        "responses": {
          "200": {
            "description": "Menu data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MenuData"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/history": {
      "get": {
        "summary": "Get historical menu data",
        "description": "Lists all historical menu weeks. The endpoint scans all menu files in storage, groups them by ISO week (Monday-Sunday), and returns only the most recently uploaded menu for each week. Without parameters, returns a list of all available weeks with metadata. With weekStart parameter, returns full menu data for that specific week.",
        "parameters": [
          {
            "in": "query",
            "name": "weekStart",
            "schema": {
              "type": "string",
              "format": "date"
            },
            "required": false,
            "description": "ISO date for the first day of the week to retrieve (either the Monday of the week or the earliest date in the menu). Example: 2025-08-25"
          }
        ],
        "responses": {
          "200": {
            "description": "Historical data - either a list of week summaries or full menu data for a specific week",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "$ref": "#/components/schemas/HistoryList"
                    },
                    {
                      "$ref": "#/components/schemas/MenuData"
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - authentication required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Week not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "next-auth.session-token"
      }
    },
    "schemas": {
      "Meal": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "startTime": {
            "type": "string",
            "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$"
          },
          "endTime": {
            "type": "string",
            "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$"
          },
          "items": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          }
        },
        "required": [
          "name",
          "startTime",
          "endTime",
          "items"
        ]
      },
      "DayMenu": {
        "type": "object",
        "properties": {
          "day": {
            "type": "string"
          },
          "meals": {
            "type": "object",
            "properties": {
              "breakfast": {
                "$ref": "#/components/schemas/Meal"
              },
              "lunch": {
                "$ref": "#/components/schemas/Meal"
              },
              "snacks": {
                "$ref": "#/components/schemas/Meal"
              },
              "dinner": {
                "$ref": "#/components/schemas/Meal"
              }
            },
            "additionalProperties": false
          }
        },
        "required": [
          "day",
          "meals"
        ]
      },
      "MenuData": {
        "type": "object",
        "properties": {
          "foodCourt": {
            "type": "string"
          },
          "week": {
            "type": "string"
          },
          "menu": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/components/schemas/DayMenu"
            },
            "patternProperties": {
              "^\\d{4}-\\d{2}-\\d{2}$": {
                "$ref": "#/components/schemas/DayMenu"
              }
            }
          }
        },
        "required": [
          "foodCourt",
          "week",
          "menu"
        ]
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "details": {
            "type": "string"
          }
        }
      },
      "WeekSummary": {
        "type": "object",
        "properties": {
          "week": {
            "type": "string",
            "description": "Week label, e.g. 'August 25 - 31, 2025'"
          },
          "foodCourt": {
            "type": "string",
            "description": "Food court name"
          },
          "startDate": {
            "type": "string",
            "format": "date",
            "description": "ISO date of the earliest day in the week"
          },
          "endDate": {
            "type": "string",
            "format": "date",
            "description": "ISO date of the latest day in the week"
          },
          "numDays": {
            "type": "integer",
            "description": "Number of days in the week"
          },
          "weekMonday": {
            "type": "string",
            "format": "date",
            "description": "The Monday of the ISO week (Monday-Sunday) this menu belongs to"
          },
          "lastModified": {
            "type": "string",
            "format": "date-time",
            "description": "ISO timestamp of when this menu was last uploaded"
          }
        },
        "required": [
          "week",
          "foodCourt",
          "startDate",
          "endDate",
          "numDays",
          "weekMonday",
          "lastModified"
        ]
      },
      "HistoryList": {
        "type": "object",
        "properties": {
          "weeks": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WeekSummary"
            },
            "description": "List of all available weeks from R2 storage, deduplicated by week (Monday-Sunday) with the most recent upload per week"
          }
        },
        "required": [
          "weeks"
        ]
      }
    }
  }
}